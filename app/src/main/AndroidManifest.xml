<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.jorge.mobile.com.transportalert">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/title_activity_detail" />
        <activity
            android:name=".SelectionActivity"
            android:label="@string/title_activity_selection"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AlertsActivity"
            android:label="@string/title_activity_alerts"
            android:theme="@style/AppTheme.NoActionBar" />


        <receiver
            android:name="app.jorge.mobile.com.transportalert.alarm.MyAlarmReceiver"
            android:process=":remote" >
        </receiver>

        <service
            android:name="app.jorge.mobile.com.transportalert.alarm.ServiceAlarm"
            android:exported="false" />
    </application>



</manifest>
